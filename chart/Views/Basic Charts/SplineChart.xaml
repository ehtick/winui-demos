<Page
    x:Class="Syncfusion.ChartDemos.WinUI.Views.SplineChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Syncfusion.ChartDemos.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <common:DemoLayout HeaderText="This sample showcases spline chart which connects the two data points using curves instead of straight lines.">
                <common:DemoLayout.DataContext>
                    <local:SplineChartViewModel />
                </common:DemoLayout.DataContext>
                <common:DemoLayout.Example>
                    <chart:SfCartesianChart x:Name="Chart" Header="Average High/Low Temperature" Height="420" PaletteBrushes="{StaticResource CustomBrushes}">

                        <chart:SfCartesianChart.Resources>
                            <ResourceDictionary>
                                <DataTemplate x:Key="labelTemplate1">
                                    <Ellipse Height="13" Width="13" Fill="{StaticResource SeriesColor1}" Stroke="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
                                </DataTemplate>
                                <DataTemplate x:Key="labelTemplate2">
                                    <Ellipse Height="13" Width="13" Fill="{StaticResource SeriesColor2}" Stroke="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
                                </DataTemplate>
                            </ResourceDictionary>
                        </chart:SfCartesianChart.Resources>
                        
                        <chart:SfCartesianChart.XAxes>
                            <chart:CategoryAxis Header="Months" PlotOffsetStart="30" PlotOffsetEnd="30" ShowMajorGridLines="False">
                                <chart:CategoryAxis.LabelStyle>
                                    <chart:LabelStyle LabelFormat="yyyy" />
                                </chart:CategoryAxis.LabelStyle>
                            </chart:CategoryAxis>
                        </chart:SfCartesianChart.XAxes>

                        <chart:SfCartesianChart.YAxes>
                            <chart:NumericalAxis Header="Temperature (In Fahrenheit)" Interval="10" Maximum="80" Minimum="30">
                                <chart:NumericalAxis.LabelStyle>
                                    <chart:LabelStyle LabelFormat="0°F" />
                                </chart:NumericalAxis.LabelStyle>
                            </chart:NumericalAxis>
                        </chart:SfCartesianChart.YAxes>

                        <chart:SfCartesianChart.Legend>
                            <chart:ChartLegend ItemMargin="2"  BorderThickness="1" CornerRadius="0" Placement="Bottom"/>
                        </chart:SfCartesianChart.Legend>

                        <chart:SplineSeries EnableAnimation="True" ItemsSource="{Binding List}" Label="India" EnableTooltip="True"
                        ShowDataLabels="True" XBindingPath="XValue" YBindingPath="YValue1">
                            <chart:SplineSeries.DataLabelSettings>
                                <chart:CartesianDataLabelSettings ContentTemplate="{StaticResource labelTemplate1}"/>
                            </chart:SplineSeries.DataLabelSettings>
                        </chart:SplineSeries>

                        <chart:SplineSeries EnableAnimation="True" ItemsSource="{Binding List}" Label="Germany" EnableTooltip="True"
                        ShowDataLabels="True" XBindingPath="XValue" YBindingPath="YValue2">
                            <chart:SplineSeries.DataLabelSettings>
                                <chart:CartesianDataLabelSettings ContentTemplate="{StaticResource labelTemplate2}"/>
                            </chart:SplineSeries.DataLabelSettings>
                        </chart:SplineSeries>
                    </chart:SfCartesianChart>

                </common:DemoLayout.Example>
                <common:DemoLayout.Xaml>
<x:String xml:space="preserve">
&lt;chart:SfCartesianChart x:Name=&quot;Chart&quot; PaletteBrushes=&quot;{StaticResource CustomBrushes}&quot;&gt;
    
    &lt;chart:SfCartesianChart.XAxes&gt;
        &lt;chart:CategoryAxis Header=&quot;Months&quot; LabelFormat=&quot;yyyy&quot; PlotOffsetStart=&quot;30&quot; PlotOffsetEnd=&quot;30&quot; ShowMajorGridLines=&quot;False&quot; /&gt;
    &lt;/chart:SfCartesianChart.XAxes&gt;

    &lt;chart:SfCartesianChart.YAxes&gt;
        &lt;chart:NumericalAxis Header=&quot;Temperature (In Fahrenheit)&quot; Interval=&quot;10&quot; LabelFormat=&quot;0°F&quot; Maximum=&quot;80&quot; Minimum=&quot;30&quot; /&gt;
    &lt;/chart:SfCartesianChart.YAxes&gt;
    
   &lt;chart:SplineSeries 
                        ItemsSource=&quot;{Binding List}&quot; 
                        XBindingPath=&quot;XValue&quot; 
                        YBindingPath=&quot;YValue1&quot; 
                        Label=&quot;India&quot; 
                        EnableTooltip=&quot;True&quot;
                        ShowDataLabels=&quot;True&quot;
                        EnableAnimation=&quot;True&quot;&gt;
        &lt;chart:SplineSeries.DataLabelSettings&gt;
            &lt;chart:CartesianDataLabelSettings 
                        ContentTemplate=&quot;{StaticResource labelTemplate1}&quot;/&gt; 
        &lt;/chart:SplineSeries.DataLabelSettings&gt;
    &lt;/chart:SplineSeries&gt;
    
    &lt;chart:SplineSeries 
                        ItemsSource=&quot;{Binding List}&quot; 
                        XBindingPath=&quot;XValue&quot; 
                        YBindingPath=&quot;YValue2&quot; 
                        Label=&quot;Germany&quot; 
                        EnableTooltip=&quot;True&quot;
                        ShowDataLabels=&quot;True&quot;
                        EnableAnimation=&quot;True&quot;&gt;
        &lt;chart:SplineSeries.DataLabelSettings&gt;
            &lt;chart:CartesianDataLabelSettings 
                        ContentTemplate=&quot;{StaticResource labelTemplate2}&quot;/&gt; 
            &lt;/chart:SplineSeries.DataLabelSettings&gt;
    &lt;/chart:SplineSeries&gt;
&lt;/chart:SfCartesianChart&gt;
</x:String>
                </common:DemoLayout.Xaml>
            </common:DemoLayout>
        </ScrollViewer>
    </Grid>
</Page>
