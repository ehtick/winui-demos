<Page
    x:Class="Syncfusion.ChartDemos.WinUI.Views.SplineAreaChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Syncfusion.ChartDemos.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <common:DemoLayout HeaderText="This sample showcases spline area which connects the points of a series by a smooth spline curve.">
                <common:DemoLayout.DataContext>
                    <local:AreaChartViewModel />
                </common:DemoLayout.DataContext>
                <common:DemoLayout.Example>
                    <chart:SfCartesianChart
                        x:Name="Chart"
                        Header="Server Performance"
                        Height="420"
                        PaletteBrushes="{StaticResource CustomBrushes}"
                        HorizontalAlignment="Center">

                        <chart:SfCartesianChart.XAxes>
                            <chart:CategoryAxis LabelPlacement="BetweenTicks" ShowGridLines="False" />
                        </chart:SfCartesianChart.XAxes>

                        <chart:SfCartesianChart.YAxes>
                            <chart:NumericalAxis
                                Maximum="80"
                                Minimum="0"
                                ShowGridLines="True" />
                        </chart:SfCartesianChart.YAxes>

                        <chart:SfCartesianChart.Legend>
                            <chart:ChartLegend Placement="Bottom" />
                        </chart:SfCartesianChart.Legend>

                        <chart:SplineAreaSeries
                            Opacity="0.3"
                            EnableAnimation="True"
                            ItemsSource="{Binding Performance}"
                            Label="Automation"
                            ShowTooltip="True"
                            XBindingPath="Date"
                            YBindingPath="Automation" />

                        <chart:SplineAreaSeries
                            Opacity="0.3"
                            EnableAnimation="True"
                            ItemsSource="{Binding Performance}"
                            Label="Application"
                            ShowTooltip="True"
                            XBindingPath="Date"
                            YBindingPath="Application" />

                        <chart:SplineAreaSeries
                            Opacity="0.3"
                            EnableAnimation="True"
                            ItemsSource="{Binding Performance}"
                            Label="Web"
                            ShowTooltip="True"
                            XBindingPath="Date"
                            YBindingPath="Web" />
                    </chart:SfCartesianChart>
                </common:DemoLayout.Example>
                <common:DemoLayout.Xaml>
                    <x:String xml:space="preserve">
 &lt;chart:SfCartesianChart x:Name=&quot;Chart&quot; PaletteBrushes=&quot;{StaticResource CustomBrushes}&quot;&gt;                    
    
    &lt;chart:SfCartesianChart.XAxes&gt;
        &lt;chart:CategoryAxis LabelPlacement=&quot;BetweenTicks&quot; ShowGridLines=&quot;False&quot; /&gt;
    &lt;/chart:SfCartesianChart.XAxes&gt;

    &lt;chart:SfCartesianChart.YAxes&gt;
        &lt;chart:NumericalAxis Maximum=&quot;80&quot; Minimum=&quot;0&quot; ShowGridLines=&quot;True&quot; /&gt;
    &lt;/chart:SfCartesianChart.YAxes&gt;
                        
    &lt;chart:SfCartesianChart.Legend&gt;
        &lt;chart:ChartLegend Placement=&quot;Bottom&quot; &gt;
        &lt;/chart:ChartLegend&gt;
    &lt;/chart:SfCartesianChart.Legend&gt;
                        
    &lt;chart:SplineAreaSeries 
                        ItemsSource=&quot;{Binding Performance}&quot; 
                        XBindingPath=&quot;Date&quot; 
                        YBindingPath=&quot;Automation&quot;
                        Label=&quot;Automation&quot; 
                        EnableAnimation=&quot;True&quot; 
                        ShowTooltip=&quot;True&quot;/&gt;

    &lt;chart:SplineAreaSeries 
                        ItemsSource=&quot;{Binding Performance}&quot; 
                        XBindingPath=&quot;Date&quot; 
                        YBindingPath=&quot;Application&quot;
                        Label=&quot;Application&quot; 
                        EnableAnimation=&quot;True&quot; 
                        ShowTooltip=&quot;True&quot;/&gt;

    &lt;chart:SplineAreaSeries 
                        ItemsSource=&quot;{Binding Performance}&quot; 
                        XBindingPath=&quot;Date&quot; 
                        YBindingPath=&quot;Web&quot;
                        Label=&quot;Web&quot; 
                        EnableAnimation=&quot;True&quot; 
                        ShowTooltip=&quot;True&quot;/&gt;
&lt;/chart:SfCartesianChart&gt;
</x:String>
                </common:DemoLayout.Xaml>
            </common:DemoLayout>
        </ScrollViewer>
    </Grid>
</Page>
