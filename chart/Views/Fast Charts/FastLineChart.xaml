<Page
    x:Class="Syncfusion.ChartDemos.WinUI.Views.FastLineChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Syncfusion.ChartDemos.WinUI"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.DataContext>
        <local:FastLineChartViewModel />
    </Page.DataContext>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <common:DemoLayout x:Name="demo" HeaderText="This sample showcases a special kind of line series which uses polyline for rendering chart points. FastLineSeries allows to render a collection with large number of data points in fraction of milliseconds.">
                <common:DemoLayout.Example>
                    <chart:SfCartesianChart
                        x:Name="Chart"
                        Height="420"
                        PaletteBrushes="{StaticResource CustomBrushes}"
                        HorizontalAlignment="Center"
                        Header="Weather Forecasting">

                        <chart:SfCartesianChart.XAxes>
                            <chart:DateTimeAxis
                               Header="Date"
                               IntervalType="Months" 
                               Interval="11"
                               ShowMajorGridLines="False">
                                <chart:DateTimeAxis.LabelStyle>
                                    <chart:LabelStyle LabelFormat="MMM yyyy" />
                                </chart:DateTimeAxis.LabelStyle>
                            </chart:DateTimeAxis>
                        </chart:SfCartesianChart.XAxes>

                        <chart:SfCartesianChart.YAxes>
                            <chart:NumericalAxis
                               Header="Temperature(In Fahrenheit)"/>
                        </chart:SfCartesianChart.YAxes>

                        <chart:FastLineSeries
                               EnableAnimation="True"
                               ItemsSource="{Binding DataCollection}"
                               EnableTooltip="True"
                               XBindingPath="Date"
                               YBindingPath="Value" />

                    </chart:SfCartesianChart>
                </common:DemoLayout.Example>
                <common:DemoLayout.Xaml>
                    <x:String xml:space="preserve">
&lt;chart:SfCartesianChart x:Name=&quot;Chart&quot; Header=&quot;Weather Forecasting&quot;
                        PaletteBrushes=&quot;{StaticResource CustomBrushes}&quot;&gt;
     
    &lt;chart:SfCartesianChart.XAxes&gt;
        &lt;chart:DateTimeAxis Header=&quot;Date&quot;
                            IntervalType=&quot;Months&quot; 
                            Interval=&quot;11&quot;
                            ShowMajorGridLines=&quot;False&quot;&gt;
            &lt;chart:DateTimeAxis.LabelStyle&gt;
                &lt;chart:LabelStyle LabelFormat=&quot;MMM yyyy&quot; /&gt;
            &lt;/chart:DateTimeAxis.LabelStyle&gt;
        &lt;/chart:DateTimeAxis&gt;
    &lt;/chart:SfCartesianChart.XAxes&gt;

    &lt;chart:SfCartesianChart.YAxes&gt;
        &lt;chart:NumericalAxis Header=&quot;Temperature(In Fahrenheit)&quot;/&gt;
    &lt;/chart:SfCartesianChart.YAxes&gt;
                        
    &lt;chart:FastLineSeries EnableAnimation=&quot;True&quot;
                          ItemsSource=&quot;{Binding DataCollection}&quot;
                          EnableTooltip=&quot;True&quot;
                          XBindingPath=&quot;Date&quot;
                          YBindingPath=&quot;Value&quot; /&gt;

&lt;/chart:SfCartesianChart&gt;
</x:String>
                </common:DemoLayout.Xaml>
            </common:DemoLayout>
        </ScrollViewer>
    </Grid>
</Page>
