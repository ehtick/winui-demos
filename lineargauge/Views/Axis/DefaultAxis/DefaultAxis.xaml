<Page x:Class="syncfusion.lineargaugedemos.winui.Views.DefaultAxis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      xmlns:gauge="using:Syncfusion.UI.Xaml.Gauges"
      xmlns:common="using:syncfusion.demoscommon.winui">

    <StackPanel>
        <common:DemoLayout HeaderText="This sample shows the basic axis view of the linear gauge control."
                           XamlSource="syncfusion.lineargaugedemos.winui/codesnippets\axis\defaultaxis\defaultaxis.xaml.txt">
            <common:DemoLayout.Example>
                <Grid VerticalAlignment="Center"
                      Height="250">
                    <gauge:SfLinearGauge x:Name="gauge"
                                         Width="550">
                        <gauge:SfLinearGauge.Axis>
                            <gauge:LinearAxis Interval="10"
                                              MinorTicksPerInterval="4">

                                <gauge:LinearAxis.Ranges>
                                    <gauge:LinearGaugeRange EndValue="40" />
                                </gauge:LinearAxis.Ranges>

                                <gauge:LinearAxis.BarPointers>
                                    <gauge:BarPointer Value="50"
                                                      EnableAnimation="True">
                                        <gauge:BarPointer.AnimationEasingFunction>
                                            <CircleEase EasingMode="EaseOut" />
                                        </gauge:BarPointer.AnimationEasingFunction>
                                    </gauge:BarPointer>
                                </gauge:LinearAxis.BarPointers>

                                <gauge:LinearAxis.MarkerPointers>
                                    <gauge:ShapePointer x:Name="shapePointer"
                                                        Value="60"
                                                        ShapeType="Triangle"
                                                        OffsetPoint="0,35"
                                                        VerticalAnchor="Start"
                                                        IsInteractive="True"
                                                        EnableAnimation="True">
                                        <gauge:ShapePointer.AnimationEasingFunction>
                                            <CircleEase EasingMode="EaseOut" />
                                        </gauge:ShapePointer.AnimationEasingFunction>
                                    </gauge:ShapePointer>
                                </gauge:LinearAxis.MarkerPointers>
                            </gauge:LinearAxis>
                        </gauge:SfLinearGauge.Axis>
                    </gauge:SfLinearGauge>
                </Grid>
            </common:DemoLayout.Example>

            <common:DemoLayout.Substitutions>
                <common:DemoLayoutSubstitution Key="shapePointerValue"
                                               SubstitutionValue="{x:Bind shapePointer.Value, Mode=OneWay}" />
            </common:DemoLayout.Substitutions>
        </common:DemoLayout>
    </StackPanel>
</Page>