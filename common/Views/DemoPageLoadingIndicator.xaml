<Page
    x:Class="syncfusion.demoscommon.winui.DemoPageLoadingIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:syncfusion.demoscommon.winui"
    NavigationCacheMode="Disabled">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///syncfusion.demoscommon.winui/Themes/themeresources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <StackPanel Background="Transparent">
        <ProgressRing
                Width="56" 
                Height="56"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SyncfusionSelectionBackground}"
                IsIndeterminate="True" />
        <TextBlock
                HorizontalAlignment="Center"
                FontSize="21"
                Margin="0,8,0,0"
                Foreground="{ThemeResource SyncfusionSelectionBackground}"
                Text="{x:Bind local:Constants.LoadingText}" />
    </StackPanel>
</Page>
