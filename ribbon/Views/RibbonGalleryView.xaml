<Page x:Class="syncfusion.ribbondemos.winui.Views.Ribbon.RibbonGalleryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:syncfusion.ribbondemos.winui"
      xmlns:ribbon="using:Syncfusion.UI.Xaml.Ribbon"
      xmlns:common="using:syncfusion.demoscommon.winui"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <local:ViewModel />
    </Page.DataContext>
    <Page.Resources>
        <DataTemplate x:Name="RibbonGalleryItemTemplate"
                      x:DataType="local:FontStyleInfo">
            <StackPanel>
                <TextBlock Margin="{x:Bind Margin}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="{x:Bind FontSize}"
                           FontStyle="{x:Bind FontStyle}"
                           FontWeight="{x:Bind FontWeight}"
                           Text="{x:Bind FontText}"
                           TextTrimming="Clip" />
                <TextBlock Margin="2,0,2,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           FontWeight="Light"
                           Text="{x:Bind FontDescription}"
                           TextTrimming="CharacterEllipsis" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel>
            <common:DemoLayout HeaderText="A simple and flexible ribbon gallery feature displays a collection of related commands similar to the gallery feature used in Microsoft Office."
                               XamlSource="syncfusion.ribbondemos.winui/Views/Resources/SourceCodes/RibbonGalleryCode.txt">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ribbon:SfRibbon ActiveLayoutMode="Normal"
                                         x:Name="ribbonGallery"
                                         BackstageMenuButtonContent="File"
                                         AllowMinimize="False"
                                         LayoutModeOptions="Normal,Simplified">
                        <ribbon:SfRibbon.Tabs>
                            <ribbon:RibbonTab Header="Home">
                                <ribbon:RibbonGroup Header="Clipboard">
                                    <ribbon:RibbonSplitButton Content="Paste"
                                                                  Icon="Paste"
                                                                  SizeMode="Large">
                                        <ribbon:RibbonSplitButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Paste" />
                                                <MenuFlyoutItem Text="Paste Special" />
                                                <MenuFlyoutItem Text="Set Default Paste" />
                                            </MenuFlyout>
                                        </ribbon:RibbonSplitButton.Flyout>
                                    </ribbon:RibbonSplitButton>
                                    <ribbon:RibbonButton Content="Cut"
                                                             Icon="Cut"
                                                             SizeMode="Normal" />
                                    <ribbon:RibbonButton Content="Copy"
                                                             Icon="Copy"
                                                             SizeMode="Normal" />
                                    <ribbon:RibbonButton Content="Format Painter"
                                                             SizeMode="Normal">
                                        <ribbon:RibbonButton.Icon>
                                            <FontIcon Glyph="&#xF0E3;" />
                                        </ribbon:RibbonButton.Icon>
                                    </ribbon:RibbonButton>
                                </ribbon:RibbonGroup>
                                <!--  Cell Styles RibbonGallery  -->
                                <ribbon:RibbonGroup Header="Cell Styles">
                                    <ribbon:RibbonGallery ItemHeight="48"
                                                              ItemWidth="100"
                                                              MaxColumnCount="6"
                                                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                                        <ribbon:RibbonGallery.Items>
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="White"
                                                                          Content="Normal"
                                                                          Foreground="Black"
                                                                          GroupName="Good, Bad and Neutral" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#ffc7ce"
                                                                          Content="Bad"
                                                                          Foreground="#be0006"
                                                                          GroupName="Good, Bad and Neutral" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#c6efce"
                                                                          Content="Good"
                                                                          Foreground="#007b74"
                                                                          GroupName="Good, Bad and Neutral" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#ffeb9c"
                                                                          Content="Neutral"
                                                                          Foreground="#df8c00"
                                                                          GroupName="Good, Bad and Neutral" />
                                            <ribbon:RibbonGalleryItem Content="Calculation"
                                                                          GroupName="Data and DataModel">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#f2f2f2"
                                                                BorderBrush="#7f7f7f"
                                                                BorderThickness="1">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#fa7d36"
                                                                       Text="Calculation" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#a5a5a5"
                                                                          Content="Check Cell"
                                                                          Foreground="White"
                                                                          GroupName="Data and DataModel" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          FontStyle="Italic"
                                                                          GroupName="Data and DataModel">
                                                <ribbon:RibbonGalleryItem.Content>
                                                    <TextBlock Foreground="#7f7f7f"
                                                               Text="Explanatory Text"
                                                               TextTrimming="CharacterEllipsis" />
                                                </ribbon:RibbonGalleryItem.Content>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem GroupName="Data and DataModel">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#ffcc99"
                                                                BorderThickness="1">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#3f5a88"
                                                                       Text="Input" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Linked Cell"
                                                                          Foreground="Orange"
                                                                          GroupName="Data and DataModel" />
                                            <ribbon:RibbonGalleryItem GroupName="Data and DataModel">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#ffffcc"
                                                                BorderBrush="#b2b2b2"
                                                                BorderThickness="1">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#3a0000"
                                                                       Text="Note" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem GroupName="Data and DataModel"
                                                                          Content="Output">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#f2f2f2"
                                                                BorderBrush="#3f3f3f"
                                                                BorderThickness="1">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="Bold"
                                                                       Foreground="#3f3f3f"
                                                                       Text="Output" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem GroupName="Data and DataModel"
                                                                          HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Warning Text"
                                                                          Foreground="Red" />
                                            <ribbon:RibbonGalleryItem GroupName="Tiles and Headings">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#4472c4"
                                                                BorderThickness="0,0,0,4">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       FontSize="18"
                                                                       FontWeight="Bold"
                                                                       Foreground="#445485"
                                                                       Text="Heading 1"
                                                                       TextTrimming="CharacterEllipsis" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem GroupName="Tiles and Headings">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#a2b8e1"
                                                                BorderThickness="0,0,0,4">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       FontSize="16"
                                                                       FontWeight="Bold"
                                                                       Foreground="#445485"
                                                                       Text="Heading 2"
                                                                       TextTrimming="CharacterEllipsis" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem GroupName="Tiles and Headings">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#a2b8e1"
                                                                BorderThickness="0,0,0,2">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       FontSize="15"
                                                                       Foreground="#44546a"
                                                                       Text="Heading 3"
                                                                       TextTrimming="CharacterEllipsis" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Heading 4"
                                                                          FontSize="15"
                                                                          Foreground="#44546a"
                                                                          GroupName="Tiles and Headings" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Title"
                                                                          FontSize="24"
                                                                          FontWeight="Light"
                                                                          GroupName="Tiles and Headings" />
                                            <ribbon:RibbonGalleryItem GroupName="Tiles and Headings">
                                                <ribbon:RibbonGalleryItem.ContentTemplate>
                                                    <DataTemplate>
                                                        <StackPanel VerticalAlignment="Center"
                                                                    BorderBrush="#4472c4"
                                                                    BorderThickness="0,1,0,1">
                                                            <TextBlock Margin="5,0,0,0"
                                                                       HorizontalAlignment="Left"
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#4472c4"
                                                                       Text="Total" />
                                                            <Border Margin="0,0,0,2"
                                                                    BorderBrush="#4472c4"
                                                                    BorderThickness="0,0,0,1" />
                                                        </StackPanel>

                                                    </DataTemplate>
                                                </ribbon:RibbonGalleryItem.ContentTemplate>
                                            </ribbon:RibbonGalleryItem>
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#d9e1f2"
                                                                          Content="20%-Accent1"
                                                                          Foreground="#000000"
                                                                          GroupName="Themed Cell Styles" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#fce4d6"
                                                                          Content="20%-Accent2"
                                                                          Foreground="#000000"
                                                                          GroupName="Themed Cell Styles" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#ededed"
                                                                          Content="20%-Accent3"
                                                                          Foreground="#000000"
                                                                          GroupName="Themed Cell Styles" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#fff2cc"
                                                                          Content="20%-Accent4"
                                                                          Foreground="#000000"
                                                                          GroupName="Themed Cell Styles" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#ddebf7"
                                                                          Content="20%-Accent5"
                                                                          Foreground="#000000"
                                                                          GroupName="Themed Cell Styles" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Background="#e2efda"
                                                                          Content="20%-Accent6"
                                                                          Foreground="#000000"
                                                                          GroupName="Themed Cell Styles" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Comma"
                                                                          GroupName="Number Format" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Comma [0]"
                                                                          GroupName="Number Format" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Currency"
                                                                          GroupName="Number Format" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Currency [0]"
                                                                          GroupName="Number Format" />
                                            <ribbon:RibbonGalleryItem HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center"
                                                                          Content="Percent"
                                                                          GroupName="Number Format" />
                                        </ribbon:RibbonGallery.Items>

                                    </ribbon:RibbonGallery>
                                </ribbon:RibbonGroup>

                                <ribbon:RibbonGroup Header="Font Styles">
                                    <!--  Font Styles RibbonGallery  -->
                                    <ribbon:RibbonGallery ItemHeight="56"
                                                              ItemTemplate="{StaticResource RibbonGalleryItemTemplate}"
                                                              ItemsSource="{Binding FontStyleCollection}"
                                                              MaxColumnCount="5"
                                                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}" />
                                </ribbon:RibbonGroup>
                            </ribbon:RibbonTab>
                        </ribbon:SfRibbon.Tabs>
                    </ribbon:SfRibbon>
                    <StackPanel Grid.Row="1">
                        <local:Sample4 />
                    </StackPanel>
                </Grid>
            </common:DemoLayout>
        </StackPanel>
    </ScrollViewer>
</Page>
