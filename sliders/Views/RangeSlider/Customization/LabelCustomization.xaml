<Page x:Class="syncfusion.sliderdemos.winui.Views.RangeSlider.LabelCustomization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      xmlns:common="using:syncfusion.demoscommon.winui"
      xmlns:slider="using:Syncfusion.UI.Xaml.Sliders">

    <ScrollViewer>
        <StackPanel>
            <common:DemoLayout HeaderText="Foreground, FontSize, FontWeigth, FontFamily, FontStyle, LabelOffset customization">
                <common:DemoLayout.Example>
                    <slider:SfRangeSlider x:Name="labelCustomizationSlider"
                                          Width="500"
                                          RangeStart="30"
                                          RangeEnd="70"
                                          ShowLabels="True"
                                          LabelOffset="10"
                                          Foreground="#AC32FB"
                                          FontSize="12"
                                          FontFamily="Comic Sans MS"
                                          FontStyle="Oblique"
                                          FontWeight="Medium" />
                </common:DemoLayout.Example>

                <common:DemoLayout.Xaml>
                    <x:String xml:space="preserve">
&lt;slider:SfRangeSlider RangeStart="$(labelCustomizationRangeStartSubstitute)"
                      RangeEnd="$(labelCustomizationRangeEndSubstitute)"
                      ShowLabels="$(showLabelsSubstitute)"
                      LabelOffset="$(labelOffsetSubstitute)"
                      FontSize="12"
                      Foreground="#AC32FB"
                      FontFamily="Comic Sans MS"
                      FontStyle="Oblique"
                      FontWeight="Medium" /&gt;
                        </x:String>
                </common:DemoLayout.Xaml>

                <common:DemoLayout.Options>
                    <Grid Width="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <CheckBox Content="ShowLabels"
                                  IsChecked="{Binding ElementName=labelCustomizationSlider, Path=ShowLabels, Mode=TwoWay}" />
                        <Slider Header="LabelOffset"
                                Grid.Row="1"
                                Maximum="50"
                                Value="{Binding ElementName=labelCustomizationSlider, Path=LabelOffset, Mode=TwoWay}" />
                    </Grid>
                </common:DemoLayout.Options>

                <common:DemoLayout.Substitutions>
                    <common:DemoLayoutSubstitution Key="labelCustomizationRangeStartSubstitute"
                                                   SubstitutionValue="{x:Bind labelCustomizationSlider.RangeStart, Mode=OneWay}" />
                    <common:DemoLayoutSubstitution Key="labelCustomizationRangeEndSubstitute"
                                                   SubstitutionValue="{x:Bind labelCustomizationSlider.RangeEnd, Mode=OneWay}" />
                    <common:DemoLayoutSubstitution Key="showLabelsSubstitute"
                                                   SubstitutionValue="{x:Bind labelCustomizationSlider.ShowLabels, Mode=OneWay}" />
                    <common:DemoLayoutSubstitution Key="labelOffsetSubstitute"
                                                   SubstitutionValue="{x:Bind labelCustomizationSlider.LabelOffset, Mode=OneWay}" />
                </common:DemoLayout.Substitutions>
            </common:DemoLayout>

            <common:DemoLayout HeaderText="Customize the labels using the data template"
                               XamlSource="syncfusion.sliderdemos.winui/source\rangeslider\labelcustomization\templatecustomization.xaml.txt">
                <common:DemoLayout.Example>
                    <slider:SfRangeSlider x:Name="labelTemplateRangeSlider"
                                          Width="500"
                                          RangeStart="30"
                                          RangeEnd="70"
                                          ShowLabels="True"
                                          LabelOffset="15">
                        <slider:SfRangeSlider.LabelTemplate>
                            <DataTemplate>
                                <Grid CornerRadius="5"
                                      Background="{ThemeResource SystemBaseLowColor}">
                                    <TextBlock Text="{Binding Text}"
                                               Margin="6" />
                                </Grid>
                            </DataTemplate>
                        </slider:SfRangeSlider.LabelTemplate>
                    </slider:SfRangeSlider>
                </common:DemoLayout.Example>

                <common:DemoLayout.Substitutions>
                    <common:DemoLayoutSubstitution Key="labelTemplateRangeStartSubstitute"
                                                   SubstitutionValue="{x:Bind labelTemplateRangeSlider.RangeStart, Mode=OneWay}" />
                    <common:DemoLayoutSubstitution Key="labelTemplateRangeEndSubstitute"
                                                   SubstitutionValue="{x:Bind labelTemplateRangeSlider.RangeEnd, Mode=OneWay}" />
                </common:DemoLayout.Substitutions>
            </common:DemoLayout>

            <common:DemoLayout HeaderText="Customized active and inactive labels"
                               XamlSource="syncfusion.sliderdemos.winui/source\rangeslider\labelcustomization\activetemplatecustomization.xaml.txt">
                <common:DemoLayout.Example>
                    <slider:SfRangeSlider x:Name="activeLabelTemplateRangeSlider"
                                          Width="500"
                                          RangeStart="30"
                                          RangeEnd="70"
                                          ShowLabels="True"
                                          LabelOffset="10"
                                          ActiveTrackFill="#AC32FB"
                                          ActiveTrackHoverFill="#bb5afc"
                                          ActiveTrackPressedFill="#9204f0"
                                          ThumbBackground="#AC32FB"
                                          ThumbHoverBackground="#bb5afc"
                                          ThumbPressedBackground="#9204f0"
                                          ThumbOverlayFill="#9204f0"
                                          InactiveTrackFill="#66AC32FB"
                                          InactiveTrackHoverFill="#66bb5afc"
                                          InactiveTrackPressedFill="#669204f0">

                        <slider:SfRangeSlider.ActiveLabelTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}"
                                           Foreground="#AC32FB" />
                            </DataTemplate>
                        </slider:SfRangeSlider.ActiveLabelTemplate>

                        <slider:SfRangeSlider.ToolTipStyle>
                            <Style TargetType="slider:SliderToolTip">
                                <Setter Property="Background"
                                        Value="#9204f0" />
                                <Setter Property="Foreground"
                                        Value="White" />
                            </Style>
                        </slider:SfRangeSlider.ToolTipStyle>

                    </slider:SfRangeSlider>
                </common:DemoLayout.Example>

                <common:DemoLayout.Substitutions>
                    <common:DemoLayoutSubstitution Key="activeLabelRangeStartSubstitute"
                                                   SubstitutionValue="{x:Bind activeLabelTemplateRangeSlider.RangeStart, Mode=OneWay}" />
                    <common:DemoLayoutSubstitution Key="activeLabelRangeEndSubstitute"
                                                   SubstitutionValue="{x:Bind activeLabelTemplateRangeSlider.RangeEnd, Mode=OneWay}" />
                </common:DemoLayout.Substitutions>
            </common:DemoLayout>
        </StackPanel>
    </ScrollViewer>
</Page>